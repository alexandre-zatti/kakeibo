generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["kakeibo"]
}

model Purchase {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime? @map("created_at")
  updatedAt  DateTime? @map("updated_at")
  status     Int?
  totalValue Decimal?  @map("total_value") @db.Decimal(10, 2)
  boughtAt   DateTime? @map("bought_at")

  products Product[]

  @@map("purchase")
  @@schema("kakeibo")
}

model Product {
  id             Int       @id @default(autoincrement())
  createdAt      DateTime? @map("created_at")
  updatedAt      DateTime? @map("updated_at")
  code           String?   @db.VarChar(255)
  description    String?   @db.VarChar(255)
  unitValue      Decimal?  @map("unit_value") @db.Decimal(10, 2)
  unitIdentifier String?   @map("unit_identifier") @db.VarChar(10)
  quantity       Decimal?  @db.Decimal(10, 2)
  totalValue     Decimal?  @map("total_value") @db.Decimal(10, 2)
  purchaseId     Int?      @map("purchase_id")

  purchase Purchase? @relation(fields: [purchaseId], references: [id], onDelete: Restrict)

  @@map("product")
  @@schema("kakeibo")
}

// =============================================================================
// Better Auth Models
// =============================================================================

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts Account[]
  sessions Session[]

  @@map("user")
  @@schema("kakeibo")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
  @@schema("kakeibo")
}

model Account {
  id           String    @id @default(cuid())
  userId       String
  accountId    String
  providerId   String
  accessToken  String?
  refreshToken String?
  idToken      String?
  expiresAt    DateTime?
  password     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@map("account")
  @@schema("kakeibo")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verification")
  @@schema("kakeibo")
}
